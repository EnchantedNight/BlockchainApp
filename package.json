{
  "name": "TonMonorepo",
  "packageManager": "yarn@1.22.22",
  "engines": {
    "node": ">=22.0.0"
  },
  "devDependencies": {
    "@types/node": "^25.3.0",
    "patch-package": "^8.0.0",
    "prettier": "^3.7.4",
    "turbo": "^2.8.3",
    "typescript": "5.9.2"
  },
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "fmt": "turbo run fmt",
    "postinstall": "patch-package",
    "test": "turbo run test",
    "deploy:cl": "turbo run test --filter=client && git add . && git commit -m \"deploy $(date +%s)\" && git push",
    "deploy:cl:wt": "git add . && git commit -m \"deploy $(date +%s)\" && git push"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
